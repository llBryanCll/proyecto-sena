@section scripts {
    <script>
        // Evento para cambiar el estado al hacer clic en el switch
        $('.estado-switch').on('click', function () {
            var nuevoEstado = $(this).prop('checked') ? 'Activo' : 'Inactivo';
            $(this).closest('form').find('input[name="nuevoEstado"]').val(nuevoEstado);
        });
