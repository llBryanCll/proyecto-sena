@model ProyectoSenaLmour.Models.TipoHabitacione

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h4>Crear Tipo De Habitación</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="TipoHabitaciones">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* <div class="form-group">
                <label asp-for="IdTipoHabitacion" class="control-label"></label>
                <input asp-for="IdTipoHabitacion" class="form-control" />
                <span asp-validation-for="IdTipoHabitacion" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="NomTipoHabitacion" class="control-label"></label>
                <input asp-for="NomTipoHabitacion" class="form-control" />
                <span asp-validation-for="NomTipoHabitacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroPersonas" class="control-label"></label>
                <input asp-for="NumeroPersonas" class="form-control" />
                <span asp-validation-for="NumeroPersonas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="Estado" class="form-control" asp-items="ViewBag.Estados">
                    <option value="">Seleccionar estado</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="btn_crear">
                <input type="submit" value="Crear Tipo Habitacion" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br>
<div class="btn_volver">
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


