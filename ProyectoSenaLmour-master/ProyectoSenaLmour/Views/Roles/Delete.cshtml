@model ProyectoSenaLmour.Models.Role

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar</h1>

<h3>¿Seguro que quieres borrar esto?</h3>
<div>
   
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomRol)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomRol)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>
    
    <form asp-action="Delete" asp-controller="Roles">
        <input type="hidden" asp-for="IdRol" />
        <input type="submit" value="Eliminar" class="btn btn-danger" onclick="swalExample()" /> |
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </form>
</div>



           
<script>

function swalExample() {
  swal({
    title: "¿Estás seguro?",
    text: "¡No podrás recuperar este archivo imaginario!",
    type: "warning",
    showCancelButton: true,
    confirmButtonClass: "btn-danger",
    confirmButtonText: "¡Sí, elimínalo!",
    closeOnConfirm: false
  },
  function() {
    swal("¡Eliminado!", "Tu archivo imaginario ha sido eliminado.", "success");
  });

  // Close the dialog after 5 seconds (adjust as needed)
  setTimeout(function() {
    swal.close();
  }, 15000); // Milliseconds
}
</script>