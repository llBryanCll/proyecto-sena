@model ProyectoSenaLmour.Models.ViewModels.PaqueteVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear Paquete</h1>

<hr />

<form asp-action="Create">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Nombre del Paquete</label>
                <input asp-for="oPaquete.NomPaquete" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Estado del Paquete</label>
                <select asp-for="oPaquete.Estado" class="form-control">
                    <option value="Activo">Activo</option>
                    <option value="Inactivo">Inactivo</option>
                </select>
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Descripción del Paquete</label>
                <input asp-for="oPaquete.Descripcion" class="form-control" />
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Costo del Paquete</label>
                <input asp-for="oPaquete.Costo" class="form-control" />
                <span class="text-danger"></span>
            </div>
            
            <br />

            <div class="form-group">
                <label class="control-label">Nombre de Habitación</label>
                <select asp-for="oPaquete.IdHabitacion" asp-items="Model.oListaNombreHabitacion" class="form-select form-select-sm" aria-label=".form-select-sm example">
                    <option selected disabled> Selecciona </option>
                </select>
            </div>

            <br />

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-dark">Atrás</a>
            </div>
        </div>

        <div class="col-md-4">

            <a class="btn btn-success" id="btnAgregarServicio">Agregar servicios</a>
            <br />
            <br />

            <select class="form-select form-select-sm" id="selectServicios" aria-label=".form-select-sm example">
                <option selected disabled>  Selecciona  </option>
                @foreach (var servicio in ViewBag.Servicios)
                {
                    <option value="@servicio.IdServicio">@servicio.NomServicio</option>
                }
            </select>

            <br />

            <input type="hidden" class="form-control" id="inputCostoServicio" />

            <div class="card">

                <div class="card-header">
                    <label class="form-label">Servicios Asignados</label>
                </div>

                <div class="card-body">

                    <table id="tablaServiciosSeleccionados" class="table table-striped table-bordered table-hover table-servicios">

                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Costo</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>

                        <input type="hidden" id="serviciosSeleccionados" name="serviciosSeleccionados" asp-for="ServiciosSeleccionados" />

                        

                    </table>
                </div>
            </div>

        </div>


    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="~/js/paquetescript.js"></script>
}

<style>

    .btn_crear {
        cursor: pointer;
        top: 390px;
        position: absolute;
    }

    .btn_volver {
        display: flex;
        justify-content: center;
        align-items: center;
        border: 2px solid #000;
        border-radius: 10px;
        padding: 5px 5px;
        width: 80px;
        background-color: #393d3f;
        color: white;
        cursor: pointer;
        top: 390px;
        position: absolute;
        right: 75%;
    }

</style>

